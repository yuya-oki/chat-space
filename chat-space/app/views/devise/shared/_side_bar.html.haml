.side-bar
  .header
    %h3.header__name
     = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
   - current_user.groups each do |group|
    .group
       = link_to group_message_path(group) do
         .group_name
          =group.name
         .group_message
          メッセージはありません
